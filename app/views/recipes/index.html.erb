<div>
  <div>
    <h1>
      List of all recipes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
  <% if session.fetch(:user_id) != nil %>
    <h2>
      Add a new recipe
    </h2>

    <form action="/insert_recipe" method="post">
      <div>
        <label for="name_box">
          Cocktail name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="instructions_box">
          Instructions
        </label>

        <textarea id="instructions_box" name="query_instructions" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="ingredients_count_box">
          Ingredients count
        </label>

        <input type="text" id="ingredients_count_box" name="query_ingredients_count">
      </div>

      <button>
        Create recipe
      </button>
    </form>
  <% else %>
  <% end %>
  </div> 
</div>


<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Instructions
        </th>

        <th>
          Image
        </th>

        <th>
          Contributor
        </th>
        <th>
        </th>
      </tr>

      <% @list_of_recipes.each do |a_recipe| %>
      <tr>
        <td>
          <%= a_recipe.id %>
        </td>

        <td>
          <%= a_recipe.name %>
        </td>

        <td>
          <%= a_recipe.instructions %>
        </td>

        <td>
          <img src="<%= a_recipe.image %>/preview">
        </td>

        <td>
          <%= a_recipe.user_id %>
        </td>

        <td>
          <a href="/recipes/<%= a_recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
